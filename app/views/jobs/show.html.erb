Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<div>
 <%= @job.comments.reverse.each do |comment| %>
   <p class="comment">
     <% comment.content %>
   </p>
   <p>
     Posted <%= comment.created_at %>
   </p>
 <% end %>
</div>
